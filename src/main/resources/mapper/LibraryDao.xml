<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.albumen.library.dao.LibraryDao">
    <resultMap id="LibraryRM" type="cn.albumen.library.dto.LibraryDto">
        <id column="idLibrary" property="id"/>
        <result column="name" property="name"/>
        <result column="location" property="location"/>
        <result column="curator_id" property="curatorId"/>
        <association property="curator" javaType="UserSecurity">
            <id column="idSecurity" property="id"/>
            <result column="user_no" property="userNo"/>
            <result column="phone" property="phone"/>
            <result column="mail" property="mail"/>
            <result column="permission" property="permission"/>
        </association>
    </resultMap>
    <select id="selectById" resultMap="LibraryRM">
        SELECT
            l.id AS idLibrary,
            l.name,
            l.location,
            l.curator_id,
            u.id AS idSecurity,
            u.user_no,
            u.phone,
            u.mail,
            u.permission
        FROM
            library AS l ,
            user_security AS u
        WHERE
            l.curator_id = u.id AND
            l.id = #{id}
    </select>

    <select id="selectByCurator" resultMap="LibraryRM">
        SELECT
            l.id AS idLibrary,
            l.name,
            l.location,
            l.curator_id,
            u.user_no,
            u.phone,
            u.mail
        FROM
            library AS l ,
            user_security AS u
        WHERE
            l.curator_id = u.id AND
            l.curator_id = #{curatorId}
    </select>

    <select id="selectLimit" resultMap="LibraryRM">
        SELECT
            l.id AS idLibrary,
            l.name,
            l.location,
            l.curator_id,
            u.user_no,
            u.phone,
            u.mail
        FROM
            library AS l ,
            user_security AS u
        WHERE
            l.curator_id = u.id

        <if test="start != null and count != null">
            limit #{start},#{count}
        </if>
    </select>

    <select id="count" resultType="Integer">
        select count(*) from library.library
    </select>

    <insert id="add">
        insert into library.library(name, location, curator_id)
        values (#{name},#{location},#{curatorId})
    </insert>

    <delete id="delete">
        delete from library.library
        where id = #{id}
    </delete>

    <update id="update">
        update library.library
        <set>
            <if test="name!=null">
                name = #{name},
            </if>
            <if test="location!=null">
                location = #{location},
            </if>
            <if test="curatorId!=null">
                curator_id = #{curatorId},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>