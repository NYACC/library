<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.albumenj.dao.BookCategoryDao">
    <insert id="add">
        insert into book_category(name)
        values (#{name})
    </insert>

    <delete id="delete">
        delete from book_category
        where id = #{id}
    </delete>

    <update id="update">
        update book_category
        set name = #{name}
        where id = #{id}
    </update>
    
    <select id="selectById" resultType="BookCategory">
        select * from book_category
        where id = #{id}
    </select>
    
    <select id="selectAll" resultType="BookCategory">
        select * from book_category
    </select>

    <select id="selectLimit" resultType="BookCategory">
        select * from book_category

        <if test="start != null and count != null">
            limit #{start},#{count}
        </if>
    </select>
</mapper>